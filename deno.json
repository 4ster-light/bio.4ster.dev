{
  "nodeModulesDir": "auto",
  "allowScripts": true,
  "tasks": {
    "dev": "vite dev",
    "build": "vite build",
    "check": "deno fmt && deno lint",
    "start": "deno task build && wrangler pages dev",
    "deploy": "deno task build && wrangler pages deploy"
  },
  "imports": {
    "@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.5",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.16",
    "@vitejs/plugin-vue": "npm:@vitejs/plugin-vue@^6.0.1",
    "@tsconfig/node22": "npm:@tsconfig/node22@^22.0.2",
    "@types/node": "npm:@types/node@^24.2.0",
    "@vue/tsconfig": "npm:@vue/tsconfig@^0.8.1",
    "qrcode.vue": "npm:qrcode.vue@^3.6.0",
    "vite-plugin-vue-devtools": "npm:vite-plugin-vue-devtools@^8.0.3",
    "lucide-vue-next": "npm:lucide-vue-next@^0.552.0",
    "tailwindcss": "npm:tailwindcss@^4.1.16",
    "daisyui": "npm:daisyui@^5.4.5",
    "vite": "npm:vite@^7.2.0",
    "vue": "npm:vue@^3.5.22",
    "vue-tsc": "npm:vue-tsc@^3.1.3",
    "wrangler": "npm:wrangler@^4.45.4"
  },
  "unstable": ["fmt-component"],
  "fmt": {
    "lineWidth": 100,
    "semiColons": false,
    "useBraces": "preferNone",
    "trailingCommas": "never"
  },
  "lint": {
    "rules": {
      "exclude": ["no-sloppy-imports"]
    }
  },
  "exclude": ["node_modules", "deno.lock", "**/*.d.ts"]
}
